<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EditProfile">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="870dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"

            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/showProfilePic"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/editName"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:gravity="center|left"
                android:hint="Name"
                android:padding="8dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editEmail"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:gravity="center|left"
                android:hint="Email"
                android:padding="8dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editPassword"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:gravity="center|left"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editMobile"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_call_24"
                android:drawablePadding="8dp"
                android:gravity="center|left"
                android:hint="Mobile"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editCity"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_apartment_24"
                android:drawablePadding="8dp"
                android:gravity="center|left"
                android:hint="City"
                android:inputType="text"
                android:padding="8dp"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editDriving"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_contact_emergency_24"
                android:drawablePadding="8dp"
                android:gravity="center|left"
                android:hint="Driving Licence"
                android:inputType="text"
                android:padding="8dp"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/editGender"
                style="@style/TEXT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_accessibility_new_24"
                android:drawablePadding="8dp"
                android:gravity="center|left"
                android:hint="Gender"
                android:inputType="text"
                android:padding="8dp"
                android:textSize="18dp" />


            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/green"
                android:text="Save"
                android:textSize="18sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>


